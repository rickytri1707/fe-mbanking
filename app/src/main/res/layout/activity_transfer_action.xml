<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorCyan"
    tools:context=".TransferActionActivity">

    <TextView
        android:text="M-Transfer"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    
    <TextView
        android:text="Dari Rekening:"
        android:textColor="@color/colorBlack"
        android:background="@color/colorGrey"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="20dp" />
    <TextView
        android:id="@+id/txtFromAcc"
        android:textColor="@color/colorBlack"
        android:background="@color/colorGrey"
        android:layout_marginLeft="80dp"
        android:layout_width="250dp"
        android:layout_height="30dp" />
    <TextView
        android:text="Ke Rekening:"
        android:textColor="@color/colorBlack"
        android:background="@color/colorGrey"
        android:layout_marginLeft="80dp"
        android:layout_width="250dp"
        android:layout_height="20dp" />
    <TextView
        android:id="@+id/txtToAcc"
        android:hint="Pilih"
        android:drawableRight="@drawable/baseline_arrow_right_alt_black_18dp"
        android:textColor="@color/colorBlack"
        android:background="@color/colorGrey"
        android:layout_marginLeft="80dp"
        android:layout_width="250dp"
        android:layout_height="30dp" />
</LinearLayout>

